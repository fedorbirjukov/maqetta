                            <pre>&lt;button class="button <b>reddit</b>"&gt;&lt;/button&gt;</pre>
                            <pre>&lt;button class="button <b>pinterest</b>"&gt;&lt;/button&gt;</pre>
                            <pre>&lt;button class="button <b>stumbleupon</b>"&gt;&lt;/button&gt;</pre>
